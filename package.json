{
	"name": "vocawiki-frontend",
	"scripts": {
		"format": "oxfmt",
		"check:type": "tsc --noEmit",
		"check:lint": "eslint .",
		"check": "pnpm run check:type && pnpm run check:lint",
		"build": "bun run --bun --tsconfig-override ./tsconfig.node.json ./scripts/build",
		"deploy": "bun run --bun --tsconfig-override ./tsconfig.node.json ./scripts/deploy",
		"before-commit": "pnpm run format && pnpm run check && pnpm run build"
	},
	"private": true,
	"type": "module",
	"devDependencies": {
		"@eslint/js": "^9.39.2",
		"@types/bun": "^1.3.9",
		"@types/fs-extra": "^11.0.4",
		"bun": "^1.3.9",
		"eslint": "^9.39.2",
		"eslint-plugin-react": "^7.37.5",
		"fs-extra": "^11.3.3",
		"globals": "^17.3.0",
		"oxfmt": "^0.33.0",
		"radashi": "^12.7.1",
		"rolldown": "1.0.0-rc.4",
		"sass-embedded": "^1.97.3",
		"type-fest": "^5.4.4",
		"types-mediawiki": "^2.0.0",
		"typescript": "^5.9.3",
		"typescript-eslint": "^8.56.0",
		"wiki-saikou": "^7.6.0",
		"zod": "^4.3.6"
	},
	"packageManager": "pnpm@10.30.0+sha512.2b5753de015d480eeb88f5b5b61e0051f05b4301808a82ec8b840c9d2adf7748eb352c83f5c1593ca703ff1017295bc3fdd3119abb9686efc96b9fcb18200937",
	"dependencies": {
		"fast-average-color": "^9.5.0"
	}
}
